<!-- 投稿に失敗した時のエラーメッセージ -->
<% if @book.errors.any? %>
<h2><%= @book.errors.count %>error</h2>
<% @book.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- ログイン中のユーザー情報 -->
      <h2 class="pt-3">User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, size:'100x100', fallback: "no_image.jpg", format: 'jpeg' %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <!-- ログイン中のユーザー以外が編集できないようにするために強制的にログイン中のユーザーの詳細画面へ -->
      <!-- @user=current_user -->
      <%= link_to edit_user_path(@user) do %>
      <div class="btn btn-outline-dark btn-sm btn-block">
        <i class="fas fa-user-cog "></i>
      </div>
      <% end %>

      <!--新しい本を投稿-->
      <h2 class="pt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: 'form-control' %>
      <p>Opinion</p>
      <%= f.text_area :body, class: 'form-control' %><br>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>

    </div>

    <div class="col-md-9">
      <!-- ユーザーの一覧 -->
      <h2 class="pt-3">Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_image.jpg", format: 'jpeg' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
