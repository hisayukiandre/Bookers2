<%= render 'layouts/error', obj:@book %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- @user=current_user -->
      <%= render 'users/info', user:@user %>

      <%= render 'books/form', book:@book %>

    </div>

    <div class="col-md-8 offset-md-1">
      <!-- ユーザーの一覧 -->
      <h2 class="pt-3">Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_image.jpg", format: 'jpeg' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
